@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container login-container mt-md-5">
    <div class="row">
        <div class="col-md-6 mx-auto login-form-1">
            <h3>Register</h3>
            <form asp-action="RegisterUser" asp-controller="Account" method="post">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Your First Name *" asp-for="FirstName" />
                    </div>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Your Last Name *" asp-for="LastName" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password *" asp-for="Password" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Telephone Number *" asp-for="PhoneNumber" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Address *" asp-for="Address" />
                </div>
                <div class="dates">
                    <div class="form-group">
                        <input class="form-control" id="DateOfBirth" autocomplete="off" type="text" asp-for="DateOfBirth" placeholder="yyyy-mm-dd" value="@string.Format("{0:yyyy-MM-dd}", DateTime.Today)" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Email *" asp-for="Email" />
                </div>
                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-5 pt-0">Restrictions:</legend>
                        <div class="col-sm-7">
                            <div class="form-check">
                                <div><span asp-validation-for="glutes" class="text-danger"></span></div>
                                <input class="form-check-input" type="checkbox" id="Starter" asp-for="glutes">
                                <label class="form-check-label">
                                    Glutes
                                </label>
                            </div>
                            <div class="form-check">
                                <div><span asp-validation-for="diabetes" class="text-danger"></span></div>
                                <input class="form-check-input" type="checkbox" id="MainDish" asp-for="diabetes">
                                <label class="form-check-label">
                                    Diabetes
                                </label>
                            </div>
                            <div class="form-check">
                                <div><span asp-validation-for="salt" class="text-danger"></span></div>
                                <input class="form-check-input" type="checkbox" id="Dessert" asp-for="salt">
                                <label class="form-check-label">
                                    Salt
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Register" />
                </div>
            </form>
        </div>
    </div>
</div>