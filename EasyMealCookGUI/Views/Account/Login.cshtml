@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container login-container mt-md-5">
    <div class="row">
        <div class="col-md-6 mx-auto login-form-1">
            <h3>Login</h3>
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Email *" asp-for="Name" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password *" asp-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>
            </form>
            <div class="form-group">
                <a asp-action="Register" asp-controller="Account">No account? Register here</a>
            </div>
        </div>
    </div>
</div>