@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container login-container mt-md-5">
    <div class="row">
        <div class="col-md-6 mx-auto login-form-1">
            <h3>Register</h3>
                <form asp-action="RegisterUser" asp-controller="Account" method="post">
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Your First Name *" asp-for="FirstName" />
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="Your Last Name *" asp-for="LastName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Your Password *" asp-for="Password" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Telephone Number *" asp-for="PhoneNumber" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Your Email *" asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit" value="Register" />
                    </div>
                </form>
        </div>
    </div>
</div>